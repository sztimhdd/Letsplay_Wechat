.container {
  padding: 30rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.activity-info {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.time {
  font-size: 28rpx;
  color: #666;
}

.fee-summary {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.total-fee, .average-fee {
  text-align: center;
}

.label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.amount {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.member-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 30rpx;
}

.fee-info {
  text-align: right;
}

.fee {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 6rpx;
  display: block;
}

.balance {
  font-size: 24rpx;
  color: #666;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn.primary {
  background: #1AAD19;
  color: #fff;
  width: 100%;
} 