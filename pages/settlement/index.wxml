<view class="container">
  <view class="header">
    <view class="activity-info">
      <view class="title">{{activity.title}}</view>
      <view class="time">{{activity.date}} {{activity.startTime}}-{{activity.endTime}}</view>
    </view>
    <view class="fee-summary">
      <view class="total-fee">
        <text class="label">总费用</text>
        <text class="amount">¥{{activity.totalFee}}</text>
      </view>
      <view class="average-fee">
        <text class="label">人均费用</text>
        <text class="amount">¥{{activity.averageFee}}</text>
      </view>
    </view>
  </view>

  <view class="member-list">
    <view class="list-header">
      <text>参与人员</text>
      <text>费用明细</text>
    </view>
    <view class="member-item" wx:for="{{members}}" wx:key="id">
      <view class="member-info">
        <image class="avatar" src="{{item.avatar}}" mode="aspectFill"></image>
        <text class="nickname">{{item.nickname}}</text>
      </view>
      <view class="fee-info">
        <view class="fee-detail">
          <text class="fee">-¥{{activity.averageFee}}</text>
          <text class="balance">余额: ¥{{item.balance}}</text>
        </view>
      </view>
    </view>
  </view>

  <view class="bottom-actions">
    <button class="btn primary" bindtap="confirmSettlement">确认结算</button>
  </view>
</view> 