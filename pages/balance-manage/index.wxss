/* pages/balance-manage/index.wxss */

.container {
    padding: 20rpx;
    background-color: #f8f8f8;
    min-height: 100vh;
}

.user-list {
    background-color: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 20rpx;
    border-bottom: 1rpx solid #eee;
}

.user-item:last-child {
    border-bottom: none;
}

.user-info {
    flex: 2;
}

.name {
    font-size: 32rpx;
    color: #333;
    margin-right: 20rpx;
    font-weight: 500;
}

.wechat {
    font-size: 28rpx;
    color: #999;
}

.balance, .spent {
    flex: 1;
    text-align: right;
}

.label {
    font-size: 24rpx;
    color: #999;
    display: block;
}

.value {
    font-size: 32rpx;
    margin-top: 8rpx;
    display: block;
    font-weight: 500;
}

.balance .value {
    color: #07c160;
}

.spent .value {
    color: #ff6b6b;
} 