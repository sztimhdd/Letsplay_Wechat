<!--index.wxml-->
<page-meta>
  <navigation-bar
    title="大家来打球"
    front-color="#000000"
    background-color="#ffffff"
  />
</page-meta>

<view class="container">
  <!-- 导航栏占位 -->
  <view class="nav-placeholder" style="height: {{navPlaceholderHeight}}px;"></view>
  
  <!-- 活动列表 -->
  <view class="activity-list">
    <activity-card 
      wx:for="{{activities}}" 
      wx:key="id"
      activity="{{item}}"
      bind:tap="goToDetail"
      data-id="{{item.id}}"
    />
  </view>

  <!-- 悬浮的新增按钮 -->
  <view class="float-btn" bindtap="goToCreateActivity">
    <icon type="add" size="24" color="#fff"/>
    <text>新增活动</text>
  </view>
</view>
