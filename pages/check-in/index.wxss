.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
}

.nav-bar-inner {
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 16px;
}

.back-btn {
  padding: 8px;
  margin-left: -8px;
}

.back-arrow {
  font-size: 20px;
  color: #333;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: 500;
  color: #333;
}

.check-in-stats {
  margin: 32rpx;
  margin-top: calc(44px + 32rpx);
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.stat-item {
  padding: 16rpx 0;
}

.stat-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-item .value {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.stat-item .note {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.participants-list {
  margin: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.participant {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.participant:last-child {
  border-bottom: none;
}

.participant .number {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #f0f0f0;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.participant .avatar {
  width: 72rpx;
  height: 72rpx;
  margin-right: 24rpx;
}

.participant .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 36rpx;
}

.participant .info {
  flex: 1;
  min-width: 0;
}

.participant .name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.participant .status {
  font-size: 24rpx;
  color: #999;
}

.participant .fee {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-right: 24rpx;
}

.participant.checked {
  background: #f6ffed;
}

.participant.checked .status {
  color: #07c160;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.save-btn {
  width: 100%;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  text-align: center;
}

.stats-group {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  position: relative;
}

.stat-card.highlight {
  background: #1AAD19;
  color: #fff;
}

.stat-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.stat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: #1AAD19;
  transition: width 0.3s ease;
}

.emphasize {
  font-size: 48rpx;
  font-weight: 600;
  margin-right: 10rpx;
}

.stat-numbers {
  margin: 15rpx 0;
}

.stat-detail {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.list-container {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 0 20rpx;
}

.list-title {
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.weui-cells {
  margin-top: 0;
}

.weui-cell {
  padding: 25rpx 30rpx;
}

.weui-check__label {
  width: 100%;
}

.user-info {
  display: flex;
  align-items: center;
}

.weui-cell__bd .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.weui-cell__bd .name {
  font-size: 28rpx;
  color: #333;
}

.weui-cell__ft .status {
  font-size: 26rpx;
  color: #999;
}

.weui-cell__ft .checked {
  color: #1AAD19;
}

.footer {
  padding: 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.action-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background: #1AAD19;
  color: #fff;
  font-size: 34rpx;
}

.action-btn[disabled] {
  opacity: 0.6;
}

/* 新增头像相关样式 */
.participants-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  padding: 20rpx 0;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 4rpx solid transparent;
  z-index: 1;
}

.avatar-container.checked {
  border-color: #1AAD19;
  box-shadow: 0 4rpx 12rpx rgba(26,173,25,0.2);
}

.avatar-container:active {
  transform: scale(0.95);
}

.avatar {
  width: 100%;
  height: 100%;
}

.name {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
  max-width: 120rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
} 