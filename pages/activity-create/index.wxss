/* pages/activity-create/index.wxss */
.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.form-group {
  display: flex;
  gap: 24rpx;
}

.form-group .form-item {
  flex: 1;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

input {
  height: 80rpx;
  font-size: 32rpx;
}

.submit-btn {
  margin-top: 48rpx;
}