.activity-card {
  margin: 24rpx;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 主要信息区域 */
.main-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.datetime {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.date {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.2;
}

.time {
  font-size: 32rpx;
  color: #666666;
}

.venue {
  font-size: 28rpx;
  color: #666666;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/* 报名信息区域 */
.signup-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.participant-count {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.participant-count.warning {
  color: #ff4d4f;
}

.fee {
  font-size: 26rpx;
  color: #666666;
  font-weight: normal;
}

/* 状态和按钮样式 */
.action-area {
  min-width: 160rpx;
  text-align: right;
}

.signup-btn {
  background: #1677ff;
  color: #ffffff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  border: none;
  display: inline-block;
  line-height: 1;
}

.signup-btn::after {
  border: none;
}

.button-hover {
  opacity: 0.9;
}

.status-text {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  display: inline-block;
}

.status-text.full {
  background: #f5f5f5;
  color: #999999;
}

.status-text.completed {
  background: #f5f5f5;
  color: #999999;
}

/* 已结束活动样式 */
.activity-card.completed {
  opacity: 0.8;
}

.activity-card.completed {
  background: #f8f9fa;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.date-block {
  display: flex;
  flex-direction: column;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-tag.upcoming {
  background: #e6f4ff;
  color: #1677ff;
}

.status-tag.completed {
  background: #f5f5f5;
  color: #e6e6e6;
}

/* 卡片内容 */
.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.venue-info {
  display: flex;
  align-items: center;
}

.signup-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.participants {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.count {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
}

.participants.warning .count {
  color: #f5222d;
}

.participants.near-limit .count {
  color: #fa8c16;
}

.count .current {
  font-size: 40rpx;
}

.count .separator {
  margin: 0 4rpx;
  color: #999999;
}

.count .max {
  color: #999999;
}

.count .label {
  font-size: 24rpx;
  color: #999999;
  margin-left: 4rpx;
}

/* 操作按钮 */
.action-btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  padding: 0 32rpx;
  border-radius: 32rpx;
  background: #1aad19;
  color: #ffffff;
  border: none;
  margin: 0;
}

.action-btn.disabled {
  background: #cccccc;
}

.action-btn::after {
  border: none;
}

/* 背景图片 */
.card-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 暗色遮罩 */
.card-overlay {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to bottom,
    rgba(0,0,0,0.3),
    rgba(0,0,0,0.7)
  );
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.date-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
}

.status.upcoming {
  background: rgba(25,118,210,0.8);
  color: #ffffff;
}

.status.completed {
  background: rgba(255,255,255,0.2);
  color: #ffffff;
}

.card-content {
  margin-top: auto;
}

.info-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(5px);
  padding: 16rpx;
  border-radius: 12rpx;
}

.field-info,
.participants-info,
.fee-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.label {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.fee-info .value {
  color: #FFD54F;
}

.participants-info .value {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  color: #81D4FA;
}

/* 当人数达到或超过16人时显示警告样式 */
.participants-info .value.warning {
  color: #FF8A80;
  animation: pulse 2s infinite;
}

/* 当人数接近上限时（比如达到14人）显示提醒样式 */
.participants-info .value.near-limit {
  color: #FFD54F;
}

.participants-info .separator {
  color: rgba(255,255,255,0.6);
  margin: 0 4rpx;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

.activity-cover {
  width: 100%;
  height: 120px;
  position: relative;
}

.activity-cover.completed::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 16px;
  z-index: 1;
}

.activity-cover.completed::before {
  content: '已结束';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  z-index: 2;
}

.activity-info {
  padding: 10px;
}

.activity-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-meta {
  margin-bottom: 8px;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #666;
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meta-item-icon {
  margin-right: 6px;
  flex-shrink: 0;
}

.meta-item-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
}

.price {
  font-size: 16px;
  font-weight: 500;
  color: #1AAD19;
}

.status-tag {
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  color: #fff;
}

.status-tag.completed {
  background-color: #999;
}

.status-tag.ongoing {
  background-color: #07c160;
}

.status-tag.upcoming {
  background-color: #1aad19;
}

.activity-card.completed {
  opacity: 0.7;
}

.activity-card.completed .activity-cover::after {
  content: '已结束';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
}

.card-image {
  width: 100%;
  height: 120px;
  position: relative;
}

.card-text {
  font-size: 12px;
  color: #666;
}

/* 底部时间段样式 */
.footer .participants {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
}

.footer .time-slot {
  color: #FFD54F;
  font-weight: 500;
}

.footer .separator {
  margin: 0 8rpx;
  color: rgba(255,255,255,0.6);
} 