.navigation-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  z-index: 99;
}

.navigation-bar__inner {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 10px;
}

.navigation-bar__left {
  position: absolute;
  left: 10px;
  z-index: 1;
}

.navigation-bar__button {
  font-size: 16px;
  color: #1AAD19;
}

.navigation-bar__center {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: 500;
} 